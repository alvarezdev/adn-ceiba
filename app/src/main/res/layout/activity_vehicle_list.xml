<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentations.VehicleList.VehicleListActivity">
    <EditText
        android:id="@+id/input_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="6"
        android:hint="@string/hint_edit_text_search"
        android:inputType="textAutoCorrect|textMultiLine|textCapCharacters"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_vehicle_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>